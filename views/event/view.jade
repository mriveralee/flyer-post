extends ../layout

block content
  .page-header
    h2
      i.fa.fa-facebook-square(style='color: #335397')
      | View Event

  br
  .lead FB Information for #{fbEvent.name} (#{fbEvent.id})

  ul.list-unstyled
      li
        .panel.panel-default
          .panel-body
            .clearfix
              img.pull-left(src='http://graph.facebook.com/#{fbEvent.cover.id#{image}', style='margin-right: 10px')
              =fbEvent.name
              small.text-muted  hosted by #{fbEvent.owner}
              br
              small #{fbEvent.description}
