extends ../layout

block content
  .page-header
    h3 Create Event

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='fb_url') Facebook Event Url
      .col-sm-8
        input.form-control(type='url', name='fb_url', id='fb_url', autofocus=true)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          | Create
